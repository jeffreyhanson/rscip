#!/bin/sh

# Library settings
PKG_CONFIG_NAME="scip"
PKG_TEST_HEADER="<scip/scip.h>"
PKG_CFLAGS=""
PKG_LIBS=""

# Find R
: ${R_HOME=`R RHOME`}
RSCRIPT_BIN=${R_HOME}/bin/Rscript
if test -z "${R_HOME}"; then
  echo "'R_HOME' could not be found!"
  exit 1
fi

# Check if variables are found
if [ "$SCIP_INCLUDE_DIR" ] || [ "$SCIP_CONFIG_DIR" ] || [ "$SCIP_LIB_DIR" ] ; then
  ## if found, then use these variables
  echo "Found SCIP_INCLUDE_DIR, SCIP_CONFIG_DIR, and/or SCIP_LIB_DIR!"
elif [ "$SCIP_HOME" ] ; then
  ## if found, then use these variables
  echo "Found SCIP_HOME!"
  ## set SCIP variables
  SCIP_INCLUDE_DIR=${SCIP_HOME}/scip/src
  SCIP_CONFIG_DIR=${SCIP_HOME}/build/scip
  SCIP_LIB_DIR=${SCIP_HOME}/build/lib
else
  ## otherwise, compile SCIP from source and set variables
  echo "Compiling SCIP from source"
  ## determine installation directory
  R_SCIP_PKG_HOME=`pwd`
  ###determine and create directory to install SCIP
  R_SCIP_SRC_DIR=`${RSCRIPT_BIN} -e "cat(tools::R_user_dir('rscip'))"`
  mkdir -p ${R_SCIP_SRC_DIR}
  ## remove any previous installation of SCIP
  cd ${R_SCIP_SRC_DIR}
  rm -rf sciplib
  ## install SCIP to user data directory
  cd ${R_SCIP_PKG_HOME}
  bash inst/build_scip.sh
  ## set SCIP variables
  SCIP_INCLUDE_DIR=${R_SCIP_SRC_DIR}/sciplib/scip/src
  SCIP_CONFIG_DIR=${R_SCIP_SRC_DIR}/sciplib/build/scip
  SCIP_LIB_DIR=${R_SCIP_SRC_DIR}/sciplib/build/lib
fi

# Escape spaces in file paths
SCIP_INCLUDE_DIR=$( echo "$SCIP_INCLUDE_DIR" | sed 's/ /\\ /g' )
SCIP_CONFIG_DIR=$( echo "$SCIP_CONFIG_DIR" | sed 's/ /\\ /g' )
SCIP_LIB_DIR=$( echo "$SCIP_LIB_DIR" | sed 's/ /\\ /g' )

# Set package compilation variables
PKG_CFLAGS="-I$SCIP_INCLUDE_DIR -I$SCIP_CONFIG_DIR $PKG_CFLAGS"
PKG_LIBS="-L$SCIP_LIB_DIR -Wl,-rpath=$SCIP_LIB_DIR -lscip $PKG_LIBS"

# For debugging
echo "Using PKG_CFLAGS=$PKG_CFLAGS"
echo "Using PKG_LIBS=$PKG_LIBS"

# Find compiler
CXX=$(${R_HOME}/bin/R CMD config CXX)
CXXFLAGS=$(${R_HOME}/bin/R CMD config CXXFLAGS)
CPPFLAGS=$(${R_HOME}/bin/R CMD config CPPFLAGS)

# Test configuration
echo "#include $PKG_TEST_HEADER" | ${CXX} -E ${CPPFLAGS} ${PKG_CFLAGS} ${CXXFLAGS} -xc++ - >configure.log 2>&1
# echo "#include $PKG_TEST_HEADER" | ${CXX} -E ${CPPFLAGS} ${PKG_CFLAGS} ${CXXFLAGS} -xc++ - >/dev/null 2>&1

cat configure.log

# Customize the error
if [ $? -ne 0 ]; then
  echo "------------------------- [ANTICONF ERROR] ----------------------------------"
  echo "Configuration failed because $PKG_CONFIG_NAME could not be installed."
  echo "------------------------- [BEGIN ERROR MESSAGE] -----------------------------"
  cat configure.log
  echo "------------------------- [END ERROR MESSAGE] -------------------------------"
  exit 1
fi

# Remove log file
rm -f configure.log

# Write to Makevars
sed -e "s|@cflags@|$PKG_CFLAGS|" -e "s|@libs@|$PKG_LIBS|" src/Makevars.in > src/Makevars

# success
exit 0
